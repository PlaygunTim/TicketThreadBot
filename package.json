{
  "name": "thread-ticket-bot",
  "version": "1.0.0",
  "description": "A discord ticket bot that is build off threads",
  "main": "dist/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc",
    "start": "node .",
    "start:deploy": "node dist/deploy-commands.js",
    "go": "npm run build && npm start",
    "go:deploy": "npm run build && npm run start:deploy",
    "lint": "eslint --max-warnings=0 'src/**/*.{js,ts}' && prettier --check '*.{json,js}' 'src/**/*.{js,ts}'",
    "format": "prettier --write  '*.{json,js}' 'src/**/*.{js,ts}'"
  },
  "author": "PlaygunTim",
  "license": "MIT",
  "dependencies": {
    "@discordjs/builders": "^0.6.0",
    "@discordjs/rest": "^0.1.0-canary.0",
    "@prisma/client": "^3.0.2",
    "ascii-table": "0.0.9",
    "axios": "^0.24.0",
    "discord-api-types": "^0.23.1",
    "discord.js": "^13.3.1"
  },
  "devDependencies": {
    "@types/node": "^16.9.4",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "ascii-table": "0.0.9",
    "colors": "^1.4.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "prettier": "2.3.2",
    "prisma": "^3.1.1",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  }
}
